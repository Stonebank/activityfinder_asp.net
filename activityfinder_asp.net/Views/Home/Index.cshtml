@{
    ViewData["Title"] = "Home";
}

@section Scripts {
     <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
}

<head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="~/css/home.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <section>
        <div class="content">
            <div class="textBox">
                <h2>It has never been easier to find <span>something to do</span></h2>
                <p>With just a tap, discover nearby activities like sightseeing, exploring and experiencing.</p>
                <a href="#">Get started</a>
            </div>
            <div class="imgBox">
                <img class="activity-image" src="@Url.Content("~/image/homepage/home-image.png")" alt="activityimage"/>
            </div>
        </div>
         <ul class="social-media">
            <li><a href="https://github.com/Stonebank"><i class="fa-brands fa-github"></i></a></li>
            <li><a href="https://www.linkedin.com/in/hassan-kassem-a47853213/?originalSubdomain=dk"><i class="fab fa-linkedin-in"></i></a></li>
        </ul>
    </section>
    <script type="text/javascript">
        navigator.geolocation.getCurrentPosition(pos => {
            const coords = pos.coords.latitude + " " + pos.coords.longitude;
            $.ajax({
                type: "POST",
                url: '@Url.Action("Test", "Home")',
                data: { coords: coords },
                success: function (recData) { console.log("Successful sent coordinates") },
                error: function () { console.log("Error. Coordinates were not sent") }
            });
        });
    </script>
</body>

